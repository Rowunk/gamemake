{
  "name": "gamemake",
  "version": "0.0.1",
  "description": "Foundations for a browser-native game engine: core math, slab allocator, time; WebGPU/WebGL2 rendering primitives + static demos. No runtime deps.",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "serve": "python3 -m http.server 8000",
    "cov": "make cov",
    "clean": "make clean",
    "smoke": "node tools/smoke_headless.js",
    "lint": "eslint src tests --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -p . --noEmit",
    "docs": "jsdoc -c jsdoc.json",
    "test": "node --test"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "UNLICENSED",
  "keywords": [
    "webgpu",
    "game-engine",
    "ecs",
    "math",
    "allocator"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "jsdoc": "^4.0.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
