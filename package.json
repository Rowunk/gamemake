{
  "name": "gamemake",
  "version": "0.0.1",
  "description": "Foundations for a browser-native game engine: core math, slab allocator, time; WebGPU/WebGL2 rendering primitives + static demos. No runtime deps.",
  "type": "module",
  "scripts": {
    "serve": "python3 -m http.server 8000",
    "cov": "make cov",
    "clean": "make clean",
    "smoke": "node tools/smoke_headless.js",
    "lint": "eslint src tests --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -p . --noEmit",
    "docs": "jsdoc -c jsdoc.json",
    "test": "node --test"
  },
  "engines": { "node": ">=18" },
  "license": "UNLICENSED",
  "keywords": ["webgpu", "game-engine", "ecs", "math", "allocator"],
  "author": "",
  "repository": { "type": "git", "url": "" }
}
